{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "bracketSpacing": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useSemanticElements": "off"
      },
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "html": {
    "formatter": {
      "indentWidth": 2,
      "lineWidth": 80
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2,
      "lineWidth": 80
    }
  },
  "assist": {
    "actions": {
      "source": {
        "useSortedAttributes": "on",
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":BUN:", ":NODE:"],
              ":PACKAGE:",
              ":BLANK_LINE:",
              ["@/assets/**"],
              ":BLANK_LINE:",
              ["@/common/**", "@/lib/**", "@/api/**", "@/utils/**"],
              ":BLANK_LINE:",
              ["./**"],
              ":BLANK_LINE:",
              ":OTHER:"
            ]
          }
        }
      }
    }
  }
}